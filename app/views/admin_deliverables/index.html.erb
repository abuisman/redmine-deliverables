<%= render 'shared/styles' %>

<div class="contextual">
  <%= link_to 'New Deliverable', new_deliverable_path, :class => 'icon icon-add' %>
</div>

<h2>Deliverables</h2>

<table class='list'>
  <tr>
    <th>Name</th>
    <th>Hand ins</th>
    <th>Deadline</th>
    <th>Actions</th>
  </tr>
<% @deliverables.each do |del| %>
  <tr>
    <td><%= link_to del.name, deliverable_path(del) %></td>
    <td>
      <%= "#{del.completed_request_count}/#{del.requests.count}" %>
    </td>
    <td><%= del.deadline %></td>
    <td>
      <%= link_to 'edit', edit_deliverable_path(del), :class => "icon icon-edit" %>
    </td>
  </tr>
<% end %>
</table>

<br/>
<br/>
<br/>
<br/>

<h3>Archived deliverables</h3>

<table class='list'>
  <tr>
    <th>Name</th>
    <th>Hand ins</th>
    <th>Deadline</th>
    <th>Actions</th>
  </tr>
<% @archived_deliverables.each do |del| %>
  <tr>
    <td><%= link_to del.name, deliverable_path(del) %></td>
    <td>
      <%= "#{del.completed_request_count}/#{del.requests.count}" %>
    </td>
    <td><%= del.deadline %></td>
    <td>
      <%= link_to 'edit', edit_deliverable_path(del), :class => "icon icon-edit" %>
      <%= link_to "delete", deliverable_path(del), :method => "DELETE", :confirm => "Are you sure you want to delete this deliverable?", :class => "icon icon-del" %>
    </td>
  </tr>
<% end %>
</table>